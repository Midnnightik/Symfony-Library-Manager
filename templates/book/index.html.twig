{% extends 'base.html.twig' %}

{% block title %}Books{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h3 m-0">Books</h1>
  <a class="btn btn-primary" href="{{ path('app_book_new') }}">+ New Book</a>
</div>

<table class="table table-striped table-hover align-middle">
  <thead class="table-dark">
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>ISBN</th>
      <th>Category</th>
      <th>Authors</th>
      <th class="text-end">Actions</th>
    </tr>
  </thead>
  <tbody>
  {% for book in books %}
    <tr>
      <td>{{ book.id }}</td>
      <td>{{ book.title }}</td>
      <td><code>{{ book.isbn }}</code></td>
      <td>{{ book.category }}</td>
      <td>
        {% for a in book.authors %}{{ loop.first ? '' : ', ' }}{{ a }}{% endfor %}
      </td>
      <td class="text-end">
        <a class="btn btn-sm btn-outline-secondary" href="{{ path('app_book_show', {'id': book.id}) }}">Show</a>
        <a class="btn btn-sm btn-outline-primary" href="{{ path('app_book_edit', {'id': book.id}) }}">Edit</a>
      </td>
    </tr>
  {% else %}
    <tr><td colspan="6" class="text-center text-muted">No records</td></tr>
  {% endfor %}
  </tbody>
</table>
{% endblock %}