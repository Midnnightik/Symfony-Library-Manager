{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h3 m-0">Categories</h1>
  <a class="btn btn-primary" href="{{ path('app_category_new') }}">+ New Category</a>
</div>

<table class="table table-striped table-hover align-middle">
  <thead class="table-dark">
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Slug</th>
      <th class="text-end">Actions</th>
    </tr>
  </thead>
  <tbody>
  {% for category in categories %}
    <tr>
      <td>{{ category.id }}</td>
      <td>{{ category.name }}</td>
      <td><code>{{ category.slug }}</code></td>
      <td class="text-end">
        <a class="btn btn-sm btn-outline-secondary" href="{{ path('app_category_show', {'id': category.id}) }}">Show</a>
        <a class="btn btn-sm btn-outline-primary" href="{{ path('app_category_edit', {'id': category.id}) }}">Edit</a>
      </td>
    </tr>
  {% else %}
    <tr><td colspan="4" class="text-center text-muted">No records</td></tr>
  {% endfor %}
  </tbody>
</table>
{% endblock %}
